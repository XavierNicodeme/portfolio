<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Xavier Nicodème | Portfolio{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            {{ encore_entry_script_tags('cv') }}
            {{ encore_entry_script_tags('reveal') }}
        {% endblock %}
    </head>
    <body>
    {% include 'components/_navbar.html.twig' %}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert text-center alert-{{ label }}" role="alert">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
        {% block body %}
        {% endblock %}
    {% include 'components/_footer.html.twig' %}
    <p class="text-dark text-center mt-5"><i class="fas fa-copyright"></i> 2022 Xavier Nicodème</p>
    </body>
</html>
