{% extends 'base.html.twig' %}

{% block title %}Language{% endblock %}

{% block body %}
    <div class="language-index container-fluid mt-5">
        <div class="row">
            <div class="mt-5 min-vh-100 col-10 offset-1">
                <table class="table">
                    <tbody>
                        <tr>
                            <th>Name</th>
                            <td>{{ language.name }}</td>
                        </tr>
                        <tr>
                            <th>Logo</th>
                            <td>{{ language.logo }}</td>
                        </tr>
                    </tbody>
                </table>
                <div class="d-flex flex-column">
                    <a href="{{ path('language_index') }}">
                        <button class="col-1 btn btn-primary">Retour</button>
                    </a>
                    <a href="{{ path('language_edit', {'id': language.id}) }}">
                        <button class="my-2 col-1 btn btn-primary">Editer</button>
                    </a>
                    {{ include('language/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
