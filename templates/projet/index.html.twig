{% extends 'base.html.twig' %}

{% block title %}Projet index{% endblock %}

{% block body %}
    <div class="container-fluid ">
        <div class="row">
            <div class="min-vh-100">
                <h1>Projet index</h1>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Link</th>
                            <th>IsGithub</th>
                            <th>actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for projet in projets %}
                        <tr>
                            <td>{{ projet.id }}</td>
                            <td>{{ projet.name }}</td>
                            <td>{{ projet.description }}</td>
                            <td>{{ projet.link }}</td>
                            <td>{{ projet.isGithub ? 'Yes' : 'No' }}</td>
                            <td>
                                <a href="{{ path('projet_show', {'id': projet.id}) }}">show</a>
                                <a href="{{ path('projet_edit', {'id': projet.id}) }}">edit</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                <a href="{{ path('projet_new') }}">Create new</a>
            </div>
        </div>
    </div>
{% endblock %}
